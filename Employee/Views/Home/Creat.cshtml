@model CreatViewModel;
@{
	ViewBag.Title = "Creat";
}
<form enctype="multipart/form-data" method="post" asp-action="Creat" asp-controller="Home">
	<div class="form-group row m-1">
		<label asp-for="Name" class="col-form-label col-sm-2">Name</label>
		<div class="col-sm-10">
			<input type="text" asp-for="Name" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="Name"></span>
	</div>
	
		<div class="form-group row m-1">
			<label asp-for="Email" class="col-form-label col-sm-2">Email</label>
			<div class="col-sm-10">
			<input type="text" asp-for="Email" class="form-control" />
				</div>

			</div>
	<div class="form-group row m-1">
   <label asp-for="Department" class="col-form-label col-sm-2">Department</label>
		<div class="col-sm-10">
		<select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()">
			<option value="">Please select</option>
		</select>
	</div>
		<span class="text-danger" asp-validation-for="Department"></span>

	</div>
	<div class="form-group row m-1">
		<label asp-for="photo" class="col-form-label col-sm-2">Email</label>
		<div class="col-sm-10">
			<input asp-for="photo" class="form-control custom-file-input" />
		</div>
		</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>